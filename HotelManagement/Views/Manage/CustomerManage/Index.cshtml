@model List<Customer>
@{
    ViewData["Title"] = "Customer Management";
}

<div class="text-center mb-3">
    <h1 class="display-6">Customer List</h1>
</div>

<table class="table table-striped table-bordered" id="sortTable">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Has Account</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            bool hasAccount = customer.Account != null;

            <tr>
                <td>@customer.CusId</td>
                <td>@customer.Name</td>
                <td>@customer.Phone</td>
                <td>@customer.Email</td>
                <td>@hasAccount</td>
                <td class="col-md-2">
                    <div class="d-flex">
                        <a class="btn btn-info me-3" asp-action="Details" asp-route-id="@customer.CusId">Details</a>
                        <a class="btn btn-danger me-3" asp-action="Delete" asp-route-id="@customer.CusId">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css">
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $('#sortTable').DataTable({
            columnDefs: [{
                orderable: false,
                targets: [5]
            }]
        });
    </script>
}