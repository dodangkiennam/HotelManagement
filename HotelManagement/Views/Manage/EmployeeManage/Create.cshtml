@model Employee

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1 class="display-6">Create Employee</h1>
</div

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmpId" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
				<label asp-for=Gender class="form-label">Gender</label>
                <select class="form-control" asp-for=Gender>
                    <option value="" selected>Choose your gender</option>
                    <option value="female">Female</option>
                    <option value="male">Male</option>
                </select>
				<span asp-validation-for=Gender class="text-danger"></span>
			</div>
            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Salary" class="form-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Account.Username" class="form-label"></label>
                <input asp-for="Account.Username" class="form-control" />
                <span asp-validation-for="Account.Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Account.Password" class="form-label"></label>
                <input asp-for="Account.Password" class="form-control" />
                <span asp-validation-for="Account.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
            <input asp-for="Account.RoleName" hidden class="form-control" />
            <input asp-for="Account.CreateDate" hidden class="form-control" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
